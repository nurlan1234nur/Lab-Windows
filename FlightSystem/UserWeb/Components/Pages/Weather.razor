@page "/flights"
@attribute [StreamRendering]

@using FlightSystem.Models
@inject FlightApiClient FlightApi

<PageTitle>Flights</PageTitle>

<h1>Available Flights</h1>

@if (flights == null)
{
    <p><em>Loading...</em></p>
}
else if (!flights.Any())
{
    <p>No flights available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Flight ID</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in flights)
            {
                <tr>
                    <td>@flight.FlightId</td>
                    <td>@flight.Origin</td>
                    <td>@flight.Destination</td>
                    <td>@flight.ScheduledDeparture.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@flight.ScheduledArrival.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Flight>? flights;

    protected override async Task OnInitializedAsync()
    {
        // API-аас нислэгийн мэдээлэл татаж байна
        flights = await FlightApi.GetFlightsAsync();
    }
}
